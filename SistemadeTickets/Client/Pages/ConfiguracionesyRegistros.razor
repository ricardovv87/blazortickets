@code {
	public string message { get; set; }
	[Parameter]
	public int Id { get; set; }
	IEnumerable<Ingeniero> ingeniero;
	IEnumerable<Tipos> tipos;
	IEnumerable<Sucursales> sucursales;

	protected async override Task OnInitializedAsync()
	{
		try
		{
			ingeniero = await servingeniero.GetIngenieros();
			tipos = await servtipos.TiposCat();
			sucursales = await servsucursales.getsucursales();
		}
		catch (Exception e)
		{
			message = "error encontrado..." + e.Message;
		}


	}

	
	


}
